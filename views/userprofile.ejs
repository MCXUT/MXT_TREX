<html>
    <head>
        <meta charset="utf-8">
        <title>Profile Page</title>

        <% include ./partials/header %>

    </head>
    <body>

        <% include ./partials/navbar %>

        <link rel="stylesheet" href="/static/stylesheets/profile.css">

        <div class="profile">
            <div class="tab">
                <div class="row top">
                    <div class="col-md-4">
                        <p class="setting">프로필</p>
                        <div class="menu">
                            <a href="#">정보</a>
                            <a href="#">보안</a>
                        </div>
                    </div>
                </div>
                <div class="row bottom">
                    <div class="col-md-4">
                        <img class="profileimg" src="https://www.stickpng.com/assets/images/585e4bf3cb11b227491c339a.png">
                        <p class="userName">John Doe</p>
                        <a class="btn btn-primary form-control" href="#">사진 교체하기</a>
                    </div>
                    <div class="col-md-8">
                            <div class="row sections basic">
                                <p class="basictitle"><b>기본 정보</b></p>
                                <form id="basicinfoform" action="/profile" method="post">
                                </form>
                                <div class="buttons basicinfo">
                                    <button class="btn btn-info editbuttons activebutton" id="edit">편집</a>
                                    <button class="btn btn-info editbuttons" id="cancel">취소</a>
                                    <button class="btn btn-info editbuttons" id="confirm" form="basicinfoform">확인</a>
                                </div>
                                <div class="divider"></div>
                                <div class="row element">
                                        <span><i class="fa fa-venus-mars" aria-hidden="true"></i><b>성별</b></span>
                                        <span class="answer switch active"><%= info.gender %></span>
                                        <span class="switch"><input form="basicinfoform" class="form-control" name="gender" value="<%= info.gender %>"></span>
                                </div>
                                <div class="row element">
                                        <span><i class="fa fa-globe" aria-hidden="true"></i><b>지역</b></span>
                                        <span class="answer switch active"><%= info.area %></span>
                                        <span class="switch"><input form="basicinfoform" class="form-control" name="area" value="<%= info.area %>"></span>

                                </div>
                                <div class="row element">
                                        <span><i class="fa fa-flag" aria-hidden="true"></i><b>타 지역 업무 가능 여부</b></span>
                                        <span class="answer switch active"><%= info.availability %></span>
                                        <span class="switch"><input form="basicinfoform" class="form-control" name="availability" value="<%= info.availability %>"></span>

                                </div>
                                <div class="row element">
                                        <span><i class="fa fa-laptop" aria-hidden="true"></i><b>직업</b></span>
                                        <span class="answer switch active"><%= info.job %></span>
                                        <span class="switch"><input form="basicinfoform" class="form-control" name="job" value="<%= info.job %>"></span>
                                </div>
                                <div class="row element">
                                        <span><i class="fa fa-certificate" aria-hidden="true"></i><b>업종/전공</b></span>
                                        <span class="answer switch active"><%= info.major %></span>
                                        <span class="switch"><input form="basicinfoform" class="form-control" name="major" value="<%= info.major %>"></span>
                                </div>
                        </div>

                        <div class="row sections">
                            <p class="basictitle"><b>서비스</b></p>
                            <div class="buttons serviceinfo">
                                <button class="btn btn-info editbuttons activebutton" id="edit">편집</a>
                                <button class="btn btn-info editbuttons" id="cancel">취소</a>
                                <button class="btn btn-info editbuttons" id="confirm">확인</a>
                            </div>
                            <div class="divider"></div>
                            <select id="inputState" class="form-control langselect" style="width: 100%;">
                              <option selected>가능 서비스 선택...</option>
                              <option>현지 통역 서비스</option>
                              <option>현지 차량 서비스</option>
                              <option>현지 기관 서비스</option>
                            </select>
                                <div class="choice" id="translate">
                                    <p class="title">현지 통역 서비스<span class="exit">x</span></p>
                                </div>
                                <div class="choice" id="cars">
                                    <p class="title">현지 차량 서비스<span class="exit">x</span></p>
                                </div>
                                <div class="choice" id="agency">
                                    <p class="title">현지 기관 서비스<span class="exit">x</span></p>
                                </div>
                        </div>
                        <div class="row sections">
                            <p class="basictitle"><b>언어</b></p>
                            <div class="buttons languageinfo">
                                <button class="btn btn-info editbuttons activebutton" id="edit">편집</a>
                                <button class="btn btn-info editbuttons" id="cancel">취소</a>
                                <button class="btn btn-info editbuttons" id="confirm">확인</a>
                            </div>
                            <div class="divider"></div>
                            <div class="row language">
                                <span><b>한국어</b></span>
                                <span>
                                    <div class="percentage"
                                        style="width: 70%;
                                                height: 100%;
                                                background-color: rgb(208, 255, 151);
                                                border-radius: 10px;"></div>70%
                                </span>
                            </div>
                            <div class="row language">
                                  <select id="inputState" class="form-control langselect" style="width: 30%;">
                                    <option selected>언어 선택...</option>
                                    <option>영어</option>
                                    <option>한국어</option>
                                    <option>프랑스어</option>
                                    <option>스페인어</option>
                                    <option>중국어</option>
                                    <option>일본어</option>
                                  </select>

                                  <select id="inputState" class="form-control proficiency" style="width: 30%;">
                                    <option selected>숙련도 선택...</option>
                                    <option>10%</option>
                                    <option>20%</option>
                                    <option>30%</option>
                                    <option>40%</option>
                                    <option>50%</option>
                                    <option>60%</option>
                                    <option>70%</option>
                                    <option>80%</option>
                                    <option>90%</option>
                                    <option>100%</option>
                                  </select>
                            </div>
                            <button class="btn btn-info addbutton">+ 언어 추가</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    <script>
        $(document).ready(() => {
            $(".menu").click((e) => {
                var menu = document.querySelector(".menu");
                var currentActive = menu.querySelector(".active");
                $(currentActive).toggleClass("active");
                $(e.target).toggleClass("active");
            });
        });
    </script>
    <script>
        $(document).ready(() => {
            $(".exit").click((e) => {
                e.target.parentElement.parentElement.remove();
            });
        });
    </script>
    <script src="/static/scripts/profileedit.js"></script>
    </body>
</html>
