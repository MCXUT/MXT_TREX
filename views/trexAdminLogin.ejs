<html>
<head>
  <meta charset="utf-8">
  <title>Login - Admin</title>

  <% include ./partials/header %>

  <style media="screen">
    a {
      text-decoration: none;
    }
  </style>
</head>
<body>

    <link rel="stylesheet" href="/static/stylesheets/auth.css">

<center>
  <div class="modal-body">
      <div class="auth_content">
          <a class="logo" href="/"><img class="margin" src="/static/images/trexlogo.png" height="60" width="100" style="margin-left:20px;float:left;"></img></a>
        <h3>
          <br><br><br>
          <p>Admin Page</p>
          <div style = "font-size: 20px">Please leave this page, if you are not an admin.</div>
          <br>
        </h3>

        <div class="loginform">

            <% if (error.length > 0) { %>
              <span style="color: red"><%= error %></span>
            <% } %>

            <form class="clientform active" action="/trex-admin/login" method="POST">
              <p style="text-align:center;color:black;">TREX ADMINS ONLY</p><br>
                <p>Email</p>
                    <input type="text" class="log form-control" name="email" required>
                <p>Password</p>
                    <input type="password" class="pwd form-control" name="password" required>
                    <div class="login-form-links">
                        <span><a href="https://www.crewmxt.com/services/contact-us" target="_blank"><i class="fa fa-question-circle"></i>
                        <span style="color:#F9C700;">Lost your password?</span>
                    </a></span>
                    </div>

                    <input class="btn btn-primary form-control" type="submit" value="Admin Login">
            </form>

        </div>

    </div>
</div>
</center>

<script src="/static/scripts/auth.js"></script>

</body>


</html>
